<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:layout_marginTop="80dp"
    tools:context=".Statistics">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="20dp"
        android:background="@drawable/goldrectangle"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/customers"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="customers"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:id="@+id/customers"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:background="@drawable/goldrectangle"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pie"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="suvidha centre"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:id="@+id/suvidha_centre"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:background="@drawable/goldrectangle"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/distributor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="distributor"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:id="@+id/distributor"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:background="@drawable/goldrectangle"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/distributor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="super distributor"
                android:textColor="#000"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:id="@+id/super_distributor"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>
